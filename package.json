{
  "name": "magnum-opus-messenger",
  "version": "1.0.0",
  "description": "A simple real-time  messenger app built on the MERN stack",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild":"NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "Live",
    "Chats"
  ],
  "author": "Isaac Tsibu-Darko",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "concurrently": "^3.5.1",
    "cors": "^2.8.5",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "helmet": "^4.6.0",
    "jwks-rsa": "^2.0.3",
    "mongoose": "^5.12.7",
    "nodemon": "^2.0.7",
    "pusher": "^5.0.0"
  }
}
